<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="#5d80b7">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>


    <TextView
        android:id="@+id/highscoreeasy"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_above="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-250dp"
        android:text="Highscore Easy: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/highscoremedium"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_above="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-280dp"
        android:text="Highscore Medium: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/highscorehard"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_above="@id/button_start_quiz"
        android:layout_marginBottom="-310dp"
        android:layout_centerHorizontal="true"
        android:text="Highscore Hard: 0"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:text="Start Quiz"
        android:textSize="20sp"
        android:textColor="#192f54"
        android:background="@drawable/button_start"/>

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button_start_quiz"
        android:layout_marginStart="113dp"
        android:layout_marginTop="15dp"
        tools:ignore="RtlCompat" />

    <Switch
        android:id="@+id/myswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Setting Suara"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:theme="@style/myswitch" />
</RelativeLayout>